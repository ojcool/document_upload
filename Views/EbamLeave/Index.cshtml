@model IEnumerable<AdminLogin.Models.LeaveEbam>

@{
    ViewBag.Title = "EBAM Team Leave Management";
    ViewBag.SubTitle = "Ebam";
}
@{
    var weekday = DateTime.Now;
}
<p>

    <div class="col-sm-6">
        @*<button class="btn btn-success" style="color:#fff">  @Html.ActionLink("Create New +", "Create") </button>*@

        <button class="btn btn-success"> <a href="@Url.Action("Create", "EbamLeave")" style="color:#fff">Create New + </a></button>

    </div>
</p>
<br />  <br />
<table id="example1" class="table table-bordered table-striped">
    <thead style=" background-color:antiquewhite">
        <tr>
            <th>
                @Html.ActionLink("Staff Name", "index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Start Date", "index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                End Date
            </th>
            <th>
                No Of Days
            </th>
            <th>
                Back Up Staff
            </th>
            <th></th>

        </tr>
    </thead>
    @if (Model.Count() == 0)
    {
        <h2>No Records Found !</h2>
    }
    @foreach (var item in Model)

    {

        <tbody>
            @if (item.EndDate >= weekday)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppManager.Manager)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.NoOfDays)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppManager1.Manager)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.id })
                        @*@Html.ActionLink("Delete", "Delete", new { id = item.id })*@
                    </td>
                </tr>
            }
        </tbody>

    }
</table>
